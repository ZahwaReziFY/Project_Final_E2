<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Home | CINELOG</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: #0f172a;
      color: white;
    }
    .movie {
      background: #111827;
      border-radius: 12px;
      padding: 15px;
      height: 100%;
    }
  </style>
</head>

<body>

<!-- Navbar -->
<nav class="navbar navbar-dark bg-black px-4">
  <span class="navbar-brand">üé¨ CINELOG</span>
  <div>
    <a href="/add-movie" class="btn btn-primary btn-sm">+ Film</a>
    <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
  </div>
</nav>

<!-- Content -->
<div class="container mt-4">
  <div class="row">

    <% movies.forEach(m => { %>
      <div class="col-md-3 mb-4">
        <div class="movie">
          <h6><%= m.title %></h6>
          <p><%= m.year %></p>
          <p>‚≠ê <%= m.rating %></p>
          <span class="badge bg-info"><%= m.genre_name %></span>

          <div class="d-flex gap-2 mt-3">
            <a href="/movies/<%= m.id %>/edit" class="btn btn-warning btn-sm">
              Edit
            </a>

            <form action="/movies/<%= m.id %>/delete" method="POST"
                  onsubmit="return confirm('Hapus film ini?')">
              <button type="submit" class="btn btn-danger btn-sm">
                Hapus
              </button>
            </form>
          </div>
        </div>
      </div>
    <% }) %>

  </div>
</div>

</body>
</html>